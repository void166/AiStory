{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,            
    "strictNullChecks": true,  
    "noImplicitAny": true,     
    "strictPropertyInitialization": true, 

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}